{
    "name": "WooWoo",
    "scopeName": "text.woo",
    "fileTypes": ["woo"],
    "limitLineLength": false,
    "patterns": [
        {
            "include": "#documentPartStart"
        },
        {
            "include": "#include"
        },
        {
            "include": "#objectType"
        },
        {
            "include": "#verboseEnvType"
        },
        {
            "include": "#shortEnv"
        },
        {
            "include": "#shorthandEnv"
        },
        {
            "include": "#outer"
        },
        {
            "include": "#mathEnv"
        },
        {
            "include": "#comment"
        },
        {
            "include": "#quote"
        }
    ],
    "repository": {
        "documentPartStart": {
            "match": "^(\\.)([A-Z]\\w+)\\s+([^\\n]+)",
            "captures": {
                "1": {
                    "name": "keyword.operator"
                },
                "2": {
                    "name": "entity.name.type.class"
                },
                "3": {
                    "name": "variable.other.readwrite"
                }
            }
        },
        "include": {
            "match": "^(\\.)(include)\\s+([^\\n]+)$",
            "captures": {
                "1": {
                    "name": "keyword.operator"
                },
                "2": {
                    "name": "entity.name.type"
                },
                "3": {
                    "name": "variable.parameter"
                }
            }
        },
        "objectType": {
            "match": "^(\\.)([A-Z][A-Za-z]+)(:)(\\s*)$",
            "captures": {
                "1": {
                    "name": "keyword.operator"
                },
                "2": {
                    "name": "storage.type"
                },
                "3": {
                    "name": "keyword.operator"
                }
            }
        },
        "quote": {
            "match": "\"",
            "name": "string"
        },
        "verboseEnvType": {
            "match": "(\")(\\.)([A-Za-z0-9_-]+)((\\.)?(\\w+))?",
            "captures": {
                "1": {
                    "name": "string"
                },
                "2": {
                    "name": "keyword.operator"
                },
                "3": {
                    "name": "entity.name.function"
                },
                "4": {
                    "name": "entity.name.function.modifier.composite"
                },
                "5": {
                    "name": "keyword.operator.dot"
                },
                "6": {
                    "name": "entity.name.function.modifier"
                }
            }
        },
        "shorthandEnv": {
            "match": "(\")([#@])([A-Za-z0-9_-]+)",
            "captures": {
                "1": {
                    "name": "string"
                },
                "2": {
                    "name": "entity.name.function"
                },
                "3": {
                    "name": "variable.parameter"
                }
            }
        },
        "shortEnv": {
            "match": "(\\.)([a-z][a-zA-Z]*)(:)([a-zA-Z_\\-0-9]+)",
            "captures": {
                "1": {
                    "name": "keyword.operator"
                },
                "2": {
                    "name": "entity.name.type"
                },
                "3": {
                    "name": "keyword.operator"
                },
                "4": {
                    "name": "variable.parameter"
                }
            }
        },
        "outer": {
            "match": "^(\\s*)([\\.!])([a-z]+)(:)(\\s*)$",
            "captures": {
              "2": {
                "name": "keyword.operator"
              },
              "3": {
                "name": "variable.other.global"
              },
              "4": {
                "name": "keyword.operator"
              }
            }
          },
        "mathEnv": {
            "match": "(\\$)([^$]+)(\\$)",
            "captures": {
                "1": {
                    "name": "entity.name.function"
                },
                "2": {
                    "name": "constant.numeric"
                },
                "3": {
                    "name": "entity.name.function"
                }
            }
        },
        "comment": {
            "match": "^%.*$",
            "name": "comment.line"
        }
    }
}
